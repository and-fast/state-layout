<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="empty_image_src">@drawable/ic_empty_data</item>
        <item name="failure_image_src">@drawable/ic_network_error</item>
        <item name="offline_image_src">@drawable/ic_no_network</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
